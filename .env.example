# ============================================================
# REQUIRED
# ============================================================
OPENCLAW_GATEWAY_TOKEN=ChangeMe
STABLE_HOSTNAME=openclaw

# ============================================================
# FEATURE FLAGS
# Set all to false for CLI-only mode (no UI, no tunnels, no persistence)
# ============================================================
ENABLE_NGROK=true
TAILSCALE_ENABLE=false
ENABLE_SPACES=false
ENABLE_UI=true

# ============================================================
# NGROK - https://dashboard.ngrok.com/get-started/setup/linux
# ============================================================
NGROK_AUTHTOKEN=ChangeMe

# ============================================================
# TAILSCALE
# ============================================================
TS_AUTHKEY=ChangeMe
TAILSCALE_ENABLE=true
ENABLE_SPACES=true

# ============================================================
# SPACES (persistence)
# ============================================================
RESTIC_SPACES_ACCESS_KEY_ID=ChangeMe
RESTIC_SPACES_SECRET_ACCESS_KEY=ChangeMe
RESTIC_SPACES_ENDPOINT=tor1.digitaloceanspaces.com
RESTIC_SPACES_BUCKET=openclaw-backup
RESTIC_PASSWORD=ChangeMe

# ============================================================
# OPTIONAL
# ============================================================
GRADIENT_API_KEY=
SSH_ENABLE=false
SSH_ALLOW_LOCAL=true
GITHUB_USERNAME=


# SSH_AUTHORIZED_USERS="ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAAB... user@host"
# Can contain multiple keys separated by newlines or spaces

# SSH_ALLOW_LOCAL=true enables SSH access to root and openclaw users from localhost
# Useful for unprivileged containers where you attach to the console and then SSH locally
# Requires SSH_ENABLE=true

# PUBLIC_SSH_LOCALACCESS=true makes the openclaw wrapper use local SSH by default
# Useful when sudo is not available or for consistent remote access behavior
PUBLIC_SSH_LOCALACCESS=true
